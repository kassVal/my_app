<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".VariantiActivity">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="475dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:layout_marginBottom="410dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Пробные варианты\n 2023"
        android:textColor="#FF8000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="280dp"
        android:layout_marginTop="250dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:backgroundTint="#FF8000"
            android:fontFamily="sans-serif-black"
            android:onClick="onClick"
            android:text="Алгебра"
            app:cornerRadius="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:backgroundTint="#FF8000"
            android:fontFamily="sans-serif-black"
            android:onClick="onClick"
            android:text="Геометрия"
            app:cornerRadius="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:backgroundTint="#FF8000"
            android:fontFamily="sans-serif-black"
            android:onClick="onClick"
            android:text="Пробный вариант 1"
            app:cornerRadius="60dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:backgroundTint="#FF8000"
            android:fontFamily="sans-serif-black"
            android:onClick="onClick"
            android:text="Пробный вариант 2"
            app:cornerRadius="60dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:backgroundTint="#FF8000"
            android:fontFamily="sans-serif-black"
            android:onClick="onClick"
            android:text="Пробный вариант 3"
            app:cornerRadius="60dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>